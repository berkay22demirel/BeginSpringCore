<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context.xsd">
        
        <context:annotation-config />
        
        <bean id="personId" class="autowiringAnnotation.Person">
		    <property name="name" value="Berkay" />
		    <property name="surname" value="Demirel" />
		</bean>
		
		<bean id="address1Id" class="autowiringAnnotation.Address">
		    <property name="province" value="Edirne" />
		    <property name="district" value="Keşan" />
		</bean>
		
		<bean id="defaultAddress" class="autowiringAnnotation.Address">
		    <property name="province" value="İstanbul" />
		    <property name="district" value="Kadıköy" />
		</bean>
		
		<bean id="jobId" class="autowiringAnnotation.Job">
		    <property name="name" value="Computer Engineer" />
		</bean>
		
</beans>